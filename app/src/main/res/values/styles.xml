<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance" parent="">
    </style>

    <!-- Display Styles -->
    <style name="TextAppearance.Display1">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="TextAppearance.Display2">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!-- Headline Styles -->
    <style name="TextAppearance.Headline1">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="TextAppearance.Headline2">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Body Styles -->
    <style name="TextAppearance.Body1">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Caption Styles -->
    <style name="TextAppearance.Caption1">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="TextAppearance.Caption2">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">10sp</item>
    </style>
</resources>
