<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.groupdetail.GroupDetailQuizFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_group_detail_quiz_back"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="190dp"
            android:text="버튼"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_group_detail_quiz_title"
            android:layout_marginStart="40dp"
            />

        <TextView
            android:id="@+id/tv_group_detail_quiz_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="150dp"/>

        <TextView
            android:id="@+id/tv_group_detail_quiz_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="질문입니다.질문입니다.질문입니다."
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="200dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_group_detail_quiz_answer_list"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="#D0D0D0"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_group_detail_quiz_title"
            android:layout_marginTop="50dp"
            tools:itemCount="8"
            tools:listitem="@layout/fragment_group_detail_quiz_user_name_list"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="투표 종료하기"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>