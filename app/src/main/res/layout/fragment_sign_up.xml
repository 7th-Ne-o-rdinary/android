<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/ignUp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.login.SignUpFragment">

    <TextView
        android:id="@+id/tv_login_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textSize="20dp"
        android:lineHeight="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="150px"
        android:layout_marginStart="110px"/>

    <EditText
        android:id="@+id/et_login_email"
        android:layout_width="300dp"
        android:layout_height="34dp"
        android:paddingStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_login_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_login_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email"
        android:textSize="20dp"
        android:lineHeight="60dp"
        app:layout_constraintTop_toBottomOf="@id/et_login_email"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="100px"
        android:layout_marginStart="110px"/>

    <EditText
        android:id="@+id/et_login_password"
        android:layout_width="300dp"
        android:layout_height="34dp"
        android:paddingStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_login_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"/>


    <TextView
        android:id="@+id/tv_signup_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="password"
        android:textSize="20dp"
        android:lineHeight="60dp"
        app:layout_constraintTop_toBottomOf="@id/et_login_password"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="100px"
        android:layout_marginStart="110px"/>

    <EditText
        android:id="@+id/et_signup_password"
        android:layout_width="300dp"
        android:layout_height="34dp"
        android:paddingStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_signup_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/tv_signup_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="회원가입"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:lineHeight="60dp"
        app:layout_constraintTop_toBottomOf="@id/et_signup_password"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="130px"
        android:layout_marginEnd="110px" />
</androidx.constraintlayout.widget.ConstraintLayout>