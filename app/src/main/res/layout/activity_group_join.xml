<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "@color/gray_600"
    tools:context=".presentation.grouplist.GroupListActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bg_noise"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/tv_group_list_ment1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시상식을 참여코드를\n입력해 주세요! "
        android:textSize="24sp"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendard_bold"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="62dp"/>

    <TextView
        android:id="@+id/tv_group_list_ment2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시상식 개최자에게 받은 코드를 입력해주세요"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendard_bold"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_group_list_ment1"
        android:layout_marginTop="12dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_group_join_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_group_list_ment2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="117dp"
        app:layout_constraintEnd_toEndOf="parent">

    <EditText
        android:id="@+id/et_group_join_num1"
        android:layout_width="55dp"
        android:layout_height="79.32dp"
        android:background="@drawable/bg_group_join_edit_text"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/et_group_join_num2"
        android:layout_width="55dp"
        android:layout_height="79.32dp"
        android:background="@drawable/bg_group_join_edit_text"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/et_group_join_num1"
        android:layout_marginStart="23dp"
        android:textAlignment="center"
       />

    <EditText
        android:id="@+id/et_group_join_num3"
        android:layout_width="55dp"
        android:layout_height="79.32dp"
        android:background="@drawable/bg_group_join_edit_text"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/et_group_join_num2"
        android:layout_marginStart="23dp"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/et_group_join_num4"
        android:layout_width="55dp"
        android:layout_height="79.32dp"
        android:background="@drawable/bg_group_join_edit_text"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/et_group_join_num3"
        android:layout_marginStart="23dp"
        android:textAlignment="center"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/main_group_join_group_btn"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="입력 완료"
        android:textColor="@color/gray_300"
        android:textSize="16sp"
        android:background="@drawable/selector_group_join_btn"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/pretendard_bold"
        android:enabled="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>






</androidx.constraintlayout.widget.ConstraintLayout>