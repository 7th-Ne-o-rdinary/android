<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray_600">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_noise"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/iv_prize_award_logo"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:src="@drawable/ic_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="82dp"/>
    
    <TextView
        android:id="@+id/tv_prize_award_ribbon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_prize_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_prize_award_logo"
        android:layout_marginTop="37dp"
        android:text="3학년 1반 연말시상식"
        android:textColor="@color/white"
        android:gravity="center"
        android:textAlignment="center"
        android:paddingBottom="40dp"/>

    <ImageView
        android:id="@+id/iv_prize_award_prize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_prize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_prize_award_ribbon"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_prize_award_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로빈"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_prize_award_prize"
        android:layout_marginTop= "20dp"/>

    <TextView
        android:id="@+id/tv_prize_award_info1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="위 사람은 아무시상부문주제에서\n오래 나를 가장웃겼으므로 이 상장을 수여함"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_prize_award_name"
        android:layout_marginTop="37dp"/>


    <TextView
        android:id="@+id/tv_prize_award_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2024년 12월 32일"
        app:layout_constraintTop_toBottomOf="@id/tv_prize_award_info1"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="124dp"/>








</androidx.constraintlayout.widget.ConstraintLayout>