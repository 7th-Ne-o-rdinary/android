<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/view_group_creation_prize_item_bg"
        android:layout_width="334.4dp"
        android:layout_height="335.6dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bg_creation_prize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_creation_prize_item_prize_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시상부문"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="27.5dp"/>

    <EditText
        android:id="@+id/et_group_creation_prize_item_prize_name"
        android:layout_width="0dp"
        android:layout_height="44.8dp"
        android:background="@drawable/bg_input_box_default"
        android:hint="개그"
        android:textSize="16sp"
        android:fontFamily="@font/pretendard_medium"
        android:textAlignment="center"
        android:textColorHint="@color/gray_200"
        app:layout_constraintTop_toBottomOf="@id/tv_creation_prize_item_prize_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="27.5dp"
        android:layout_marginEnd="27.5dp"
        android:layout_marginTop="8dp"/>

   <!-- et_group_creation_prize_item_quiz_description
    et_group_creation_prize_item_prize_description-->

    <TextView
        android:id="@+id/tv_group_creation_prize_item_quiz_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시상질문"
        app:layout_constraintTop_toBottomOf="@id/et_group_creation_prize_item_prize_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="13dp"
        android:layout_marginStart="27.5dp"/>


    <EditText
        android:id="@+id/et_group_creation_prize_item_quiz_description"
        android:layout_width="0dp"
        android:layout_height="44.8dp"
        android:background="@drawable/bg_input_box_default"
        android:hint="올해 나를 가장 웃겨줬던 어쩌구"
        android:textSize="16sp"
        android:fontFamily="@font/pretendard_medium"
        android:textAlignment="center"
        android:textColorHint="@color/gray_200"
        app:layout_constraintTop_toBottomOf="@id/tv_group_creation_prize_item_quiz_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="27.5dp"
        android:layout_marginEnd="27.5dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tv_group_creation_prize_item_prize_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시상내용"
        app:layout_constraintTop_toBottomOf="@id/et_group_creation_prize_item_quiz_description"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="13dp"
        android:layout_marginStart="27.5dp"/>

    <EditText
        android:id="@+id/et_group_creation_prize_item_prize_description"
        android:layout_width="0dp"
        android:layout_height="99dp"
        android:background="@drawable/bg_input_box_default"
        android:hint="올해 나를 가장 웃겨줬던 어쩌구"
        android:textSize="16sp"
        android:fontFamily="@font/pretendard_medium"
        android:textAlignment="center"
        android:textColorHint="@color/gray_200"
        app:layout_constraintTop_toBottomOf="@id/tv_group_creation_prize_item_prize_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="27.5dp"
        android:layout_marginEnd="27.5dp"
        android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>