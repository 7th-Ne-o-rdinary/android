<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_group_creation_prize_item_prize_count_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상장 1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_group_creation_prize_item_prize_name"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="#808080"
        android:hint="상 이름"
        android:textAlignment="center"
        android:textColorHint="@color/white"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_group_creation_prize_item_prize_count_number"
        app:layout_constraintStart_toEndOf="@id/tv_group_creation_prize_item_prize_count_number"
        />

    <EditText
        android:id="@+id/et_group_creation_prize_item_quiz_description"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="#808080"
        android:hint="질문 내용"
        android:textAlignment="center"
        android:textColorHint="@color/white"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toEndOf="@id/tv_group_creation_prize_item_prize_count_number"
        app:layout_constraintTop_toBottomOf="@id/et_group_creation_prize_item_prize_name"
        />

    <EditText
        android:id="@+id/et_group_creation_prize_item_prize_description"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="#808080"
        android:hint="상장 내용"
        android:textAlignment="center"
        android:textColorHint="@color/white"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/et_group_creation_prize_item_quiz_description"
        app:layout_constraintStart_toEndOf="@id/tv_group_creation_prize_item_prize_count_number"
        />

</androidx.constraintlayout.widget.ConstraintLayout>