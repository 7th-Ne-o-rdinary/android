<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.login.StartActivity"
    android:background = "@color/gray_600">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_noise"
        android:scaleType="fitXY"
        android:alpha="1.0"/>

    <ImageView
        android:id="@+id/iv_start_logo"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/ic_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="120dp"/>

    <TextView
        android:id="@+id/tv_start_intro1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="너디너리 식구들과의 은밀한 추가 일정"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/pretendard_medium"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_start_logo"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_start_intro1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/tv_start_intro2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12월 32일,"
            android:fontFamily="@font/pretendard_bold"
            android:textSize="18sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_start_intro3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_medium"
            android:text="시상식이 시작됩니다!"
            android:textColor="@color/white"
            android:textSize="16sp"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_start_login"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/ic_login_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_start_signup"
        android:layout_marginBottom="20dp"/>

    <ImageButton
        android:id="@+id/btn_start_signup"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@drawable/ic_signup_btn"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>
