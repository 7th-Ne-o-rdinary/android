<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.groupcreation.GroupCreationActivity">

    <LinearLayout
        android:id="@+id/layout_group_creation_room_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp">

        <TextView
            android:id="@+id/tv_group_creation_room_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:text="방 이름" />

        <EditText
            android:id="@+id/et_group_creation_room_name"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:background="#808080"
            android:hint="방 이름 입력"
            android:textAlignment="center"
            android:textColorHint="@color/white" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_group_creation_prize_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상장 입력"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_group_creation_room_info"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_group_creation_prize"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toTopOf="@id/tv_group_creation_prize_enter"
        app:layout_constraintStart_toStartOf="@id/tv_group_creation_prize_enter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/group_creation_prize_item"
        tools:itemCount="1"/>

    <Button
        android:id="@+id/btnGroupCreationAddPrize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시상추가"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnGroupCreationDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="생성하기"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>