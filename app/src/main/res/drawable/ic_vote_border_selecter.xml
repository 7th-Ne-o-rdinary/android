<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 선택 상태일 때 (selected=true) -->
    <item android:state_selected="true">
        <shape
            android:shape="rectangle">
            <solid
                android:color="@android:color/transparent" /> <!-- 투명 배경 -->
            <stroke
                android:width="2dp"
                android:color="@color/yellow" /> <!-- 노란색 테두리 -->
            <corners
                android:radius="4dp" /> <!-- 테두리 둥글게 -->
        </shape>
    </item>

    <!-- 기본 상태 -->
    <item>
        <shape
            android:shape="rectangle">
            <solid
                android:color="@android:color/transparent" /> <!-- 투명 배경 -->
            <stroke
                android:width="2dp"
                android:color="@color/white" /> <!-- 흰색 테두리 -->
            <corners
                android:radius="4dp" /> <!-- 테두리 둥글게 -->
        </shape>
    </item>

</selector>